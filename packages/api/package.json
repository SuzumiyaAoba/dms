{
  "name": "@dms/api",
  "version": "1.0.0",
  "description": "API server for DMS",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write ."
  },
  "dependencies": {
    "@dms/core": "workspace:*",
    "@hono/node-server": "^1.19.6",
    "@hono/zod-openapi": "^1.1.5",
    "@scalar/hono-api-reference": "^0.9.25",
    "dotenv": "^16.0.0",
    "hono": "^4.10.7",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}
