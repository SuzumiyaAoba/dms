# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# CORS
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# Database
# Database type: memory (in-memory) or libsql (persistent)
DATABASE_TYPE=memory
# LibSQL database URL (file path or remote URL)
# For local file: file:./data/dms.db
# For remote: libsql://[hostname]
DATABASE_URL=file:./data/dms.db
# LibSQL auth token (required for remote connections)
DATABASE_AUTH_TOKEN=

# Storage
# Storage backend: filesystem or s3
STORAGE_TYPE=filesystem
# Base path for file storage (used when STORAGE_TYPE=filesystem)
STORAGE_PATH=./storage/documents
